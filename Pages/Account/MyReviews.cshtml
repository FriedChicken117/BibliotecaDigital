@page
@model Biblioteca.Pages.Account.MyReviewsModel
@{
    ViewData["Title"] = "Mis Reseñas";
}

<h2>Mis Reseñas</h2>

@if (!Model.Reviews.Any())
{
    <div class="alert alert-info">
        No has dejado ninguna reseña todavía.
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model.Reviews)
        {
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-page="/Books/Details" asp-route-id="@item.Book.Id">@item.Book.Title</a>
                        </h5>
                        <p class="text-muted mb-2">
                            <strong>Autor:</strong> @item.Book.Author | 
                            <strong>Categoría:</strong> @item.Book.Category
                        </p>
                        <div class="mb-2">
                            <span class="text-warning">
                                @for (int i = 0; i < item.Review.Rating; i++)
                                {
                                    <span>&#9733;</span>
                                }
                                @for (int i = item.Review.Rating; i < 5; i++)
                                {
                                    <span class="text-muted">&#9733;</span>
                                }
                            </span>
                            <small class="text-muted ms-2">@item.Review.CreatedAt.ToLocalTime().ToString("g")</small>
                        </div>
                        
                        @if (Model.ReviewToEdit?.Id == item.Review.Id)
                        {
                            <form method="post" asp-page-handler="Edit" asp-route-id="@item.Review.Id" class="mt-3">
                                <div class="mb-3">
                                    <label asp-for="EditInput.Rating" class="form-label">Calificación (1 a 5)</label>
                                    <input asp-for="EditInput.Rating" class="form-control" type="number" min="1" max="5" />
                                    <span asp-validation-for="EditInput.Rating" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="EditInput.Comment" class="form-label">Comentario</label>
                                    <textarea asp-for="EditInput.Comment" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="EditInput.Comment" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                                <a asp-page="/Account/MyReviews" class="btn btn-secondary">Cancelar</a>
                            </form>
                        }
                        else
                        {
                            <p class="mb-2">@item.Review.Comment</p>
                            <div>
                                <a asp-page="/Account/MyReviews" asp-route-editId="@item.Review.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Review.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                            onclick="return confirm('¿Estás seguro de que quieres eliminar esta reseña?');">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
