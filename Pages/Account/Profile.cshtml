@page
@model Biblioteca.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="row">
    <div class="col-md-8">
        <h2>Mi Perfil</h2>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Información del Usuario</h5>
                <p class="card-text">
                    <strong>Nombre de usuario:</strong> @Model.UserName
                </p>
                <div class="mt-3">
                    <a asp-page="/Account/MyReviews" class="btn btn-primary">Ver mis reseñas</a>
                </div>
            </div>
        </div>
    </div>
</div>
