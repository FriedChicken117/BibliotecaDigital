@page
@model Biblioteca.Pages.Admin.Books.CreateModel
@{
    ViewData["Title"] = "Nuevo libro";
}

<h2>Nuevo libro</h2>
<p class="text-muted">Solo el administrador puede crear libros.</p>
<hr />

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Author" class="form-label"></label>
        <input asp-for="Input.Author" class="form-control" />
        <span asp-validation-for="Input.Author" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Category" class="form-label"></label>
        <input asp-for="Input.Category" class="form-control" />
        <span asp-validation-for="Input.Category" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Summary" class="form-label"></label>
        <textarea asp-for="Input.Summary" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Input.Summary" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

